<dune_plugin>
    <name>sharavoz.tv</name>
    <caption>Sharavoz TV</caption>
    <short_name>sharavoz</short_name>
    <version_index>1</version_index>
    <version>1.0.2</version>
    <release_date>26.10.2021</release_date>
    <auto_resume>
        <enable>yes</enable>
    </auto_resume>
    <entry_points>
        <entry_point>
            <parent_media_url>root://tv</parent_media_url>
            <media_url>tv_group_list</media_url>
            <caption>Sharavoz TV</caption>
            <icon_url>plugin_file://icons/logo_sharavoz.png</icon_url>
            <actions>
                <key_enter>
                    <type>plugin_open_folder</type>
                </key_enter>
                <key_play>
                    <type>plugin_tv_play</type>
                </key_play>
            </actions>
            <popup_menu>
                <menu_items>
                    <menu_item>
                        <caption>Настройки Sharavoz TV</caption>
                        <icon_url>gui_skin://small_icons/setup.aai</icon_url>
                        <action>
                            <type>plugin_handle_user_input</type>
                            <params>
                                <handler_id>entry</handler_id>
                                <control_id>do_setup</control_id>
                            </params>
                        </action>
                    </menu_item>
                    <menu_item>
                        <caption>Перезагрузить плеер</caption>
                        <icon_url>gui_skin://small_icons/service_file.aai</icon_url>
                        <action>
                            <type>plugin_handle_user_input</type>
                            <params>
                                <handler_id>entry</handler_id>
                                <control_id>do_reboot</control_id>
                            </params>
                        </action>
                    </menu_item>
                    <menu_item>
                        <caption>Выключить Dune</caption>
                        <icon_url>gui_skin://small_icons/power.aai</icon_url>
                        <action>
                            <type>plugin_handle_user_input</type>
                            <params>
                                <handler_id>entry</handler_id>
                                <control_id>power_off</control_id>
                            </params>
                        </action>
                    </menu_item>
                </menu_items>
            </popup_menu>
            <ip_address_required>yes</ip_address_required>
            <show_cookie_name>show_tv</show_cookie_name>
            <show_by_default>yes</show_by_default>
        </entry_point>
        <entry_point>
            <parent_media_url>setup://applications</parent_media_url>
            <media_url>setup</media_url>
            <caption>Sharavoz TV</caption>
            <icon_url>plugin_file://icons/logo_sharavoz.png</icon_url>
            <actions>
                <key_enter>
                    <type>plugin_open_folder</type>
                </key_enter>
                <key_play>
                    <type>plugin_handle_user_input</type>
                    <params>
                        <handler_id>entry</handler_id>
                    </params>
                </key_play>
            </actions>
        </entry_point>
    </entry_points>
    <type>php</type>
    <params>
        <program>starnet.php</program>
    </params>
</dune_plugin>
