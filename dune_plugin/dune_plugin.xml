<dune_plugin>
    <name>{name}</name>
    <caption>{plugin_caption}</caption>
    <class_name>default</class_name>
    <short_name>{short_name}</short_name>
    <icon_url>{plugin_logo}</icon_url>
    <background>{plugin_bg}</background>
    <version_index>{plugin_version_index}</version_index>
    <version>{plugin_version}</version>
    <release_date>{plugin_release_date}</release_date>
    <channels_url_path></channels_url_path>
    <global_actions>
        <boot_end>
            <type>plugin_system</type>
            <data>
                <run_string>bin/update_suppliers</run_string>
            </data>
        </boot_end>
    </global_actions>
    <check_update>
        <schema>2</schema>
        <url></url>
        <timeout>0</timeout>
    </check_update>
    <embeddable_plugin_folders>
        <enabled>yes</enabled>
        <update_action>
            <type>plugin_handle_user_input</type>
            <data>
                <show_dialog_delay>10000</show_dialog_delay>
            </data>
            <params>
                <handler_id>entry_handler</handler_id>
                <control_id>plugin_entry</control_id>
                <action_id>update_epfs</action_id>
            </params>
        </update_action>
        <mapping>
            <tv>{name}</tv>
        </mapping>
    </embeddable_plugin_folders>
    <entry_points>
        <entry_point>
            <parent_media_url>root://tv</parent_media_url>
            <media_url>tv_groups</media_url>
            <caption>{plugin_caption}</caption>
            <icon_url>{plugin_logo}</icon_url>
            <actions>
                <key_enter>
                    <type>plugin_handle_user_input</type>
                    <params>
                        <handler_id>entry_handler</handler_id>
                        <control_id>plugin_entry</control_id>
                        <action_id>launch</action_id>
                        <mandatory_playback>0</mandatory_playback>
                    </params>
                </key_enter>
                <key_play>
                    <type>plugin_handle_user_input</type>
                    <params>
                        <handler_id>entry_handler</handler_id>
                        <control_id>plugin_entry</control_id>
                        <action_id>launch</action_id>
                        <mandatory_playback>1</mandatory_playback>
                    </params>
                </key_play>
            </actions>
            <popup_menu>
                <menu_items>
                    <menu_item>
                        <caption>Настройки {plugin_caption}</caption>
                        <icon_url>gui_skin://small_icons/setup.aai</icon_url>
                        <action>
                            <type>plugin_handle_user_input</type>
                            <params>
                                <handler_id>entry_handler</handler_id>
                                <control_id>do_setup</control_id>
                            </params>
                        </action>
                    </menu_item>
                    <menu_item>
                        <caption>Очистить кэш EPG</caption>
                        <icon_url>gui_skin://small_icons/subtitles_settings.aai</icon_url>
                        <action>
                            <type>plugin_handle_user_input</type>
                            <params>
                                <handler_id>entry_handler</handler_id>
                                <control_id>do_clear_epg</control_id>
                            </params>
                        </action>
                    </menu_item>
                    <menu_item>
                        <caption>Перезагрузить плеер</caption>
                        <icon_url>gui_skin://small_icons/service_file.aai</icon_url>
                        <action>
                            <type>plugin_handle_user_input</type>
                            <params>
                                <handler_id>entry_handler</handler_id>
                                <control_id>do_reboot</control_id>
                            </params>
                        </action>
                    </menu_item>
                    <menu_item>
                        <caption>Выключить Dune</caption>
                        <icon_url>gui_skin://small_icons/power.aai</icon_url>
                        <action>
                            <type>plugin_handle_user_input</type>
                            <params>
                                <handler_id>entry_handler</handler_id>
                                <control_id>power_off</control_id>
                            </params>
                        </action>
                    </menu_item>
                </menu_items>
            </popup_menu>
            <ip_address_required>yes</ip_address_required>
            <show_cookie_name>show_tv</show_cookie_name>
            <show_by_default>yes</show_by_default>
        </entry_point>
        <entry_point>
            <parent_media_url>setup://applications</parent_media_url>
            <media_url>setup</media_url>
            <caption>{plugin_caption}</caption>
            <icon_url>{plugin_logo}</icon_url>
            <actions>
                <key_enter>
                    <type>plugin_open_folder</type>
                </key_enter>
            </actions>
        </entry_point>
    </entry_points>
    <type>php</type>
    <params>
        <program>starnet.php</program>
    </params>
    <auto_resume>
        <enable>no</enable>
        <action>
            <type>plugin_handle_user_input</type>
            <params>
                <handler_id>entry_handler</handler_id>
                <control_id>plugin_entry</control_id>
                <mandatory_playback>1</mandatory_playback>
            </params>
        </action>
        <ip_address_required>yes</ip_address_required>
        <valid_time_required>yes</valid_time_required>
    </auto_resume>
</dune_plugin>
